mixin menuCard(img, topic, items, urls, animSide, br=false)
  .place2.aos(data-aos=animSide data-aos-once='true' data-aos-offset='50')
    table(style='border-collapse: separate; border-spacing: 3vw 2vh;')
      tr
        td(rowspan='3')
          img(src=img style="width: 10vw;")
        td
          h1.topic=topic
      tr
        td
          each item, i in items
            a.topic-a(href=urls[i] style='font-size: 1.5vw;') !{fa_chevron_right} !{item}
            <br>
            



